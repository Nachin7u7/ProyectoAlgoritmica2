<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".juegoGrafico2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:text="¡OH NO! ¡UN EBRIO ESTA CONDUCIENDO UN COCHE Y HAY UN BEBÉ EN EL CAMINO!
         ¿el bebé podrá salvarse?"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="El bebe esta en el punto: "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="punto1"
            android:id="@+id/punto"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="170dp"
            android:layout_height="139dp"
            app:srcCompat="@drawable/coche_azul"
            tools:layout_editor_absoluteX="239dp"
            tools:layout_editor_absoluteY="162dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="170dp"
            android:layout_height="139dp"
            android:layout_marginTop="30dp"
            android:rotation="-22"
            app:srcCompat="@drawable/auto_rojo"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="360dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/angulo"
            android:textColor="@color/black"
            android:layout_marginTop="100dp"
            android:text="angulo1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/equis"
            android:layout_width="201dp"
            android:layout_height="match_parent"
            android:src="@drawable/no_check" />

        <ImageButton
            android:id="@+id/check"
            android:layout_width="197dp"
            android:layout_height="match_parent"
            android:src="@drawable/check" />

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>